jenkins:
  remotingSecurity:
    enabled: true
  systemMessage: "Welcome to the ultimate Epitech DevOps tool"
  securityRealm:
    local:
      allowsSignup: false
      users:
        - id: {{ jenkins_admin_user }}
          name: {{ jenkins_admin_user }}
          password: {{ jenkins_admin_passwd }}
  authorizationStrategy:
    roleBased:
      roles:
        global:
          - assignments:
            - "{{ jenkins_admin_user }}"
            name: administrator
            description: "One user to rule them all"
            permissions:
              - "Overall/Administer"
security:
  scriptApproval:
    approvedScriptHashes:
      - "SHA512:c5f715d1f1067b3f99eeb425ac7389276cc125053c801f3c099c212b2623302fc7401f8f9075e6ef94e4d1d782946eacfbeb5b97801faf5dc2a68a4cf44c879e"
unclassified:
  location:
    adminAddress: "address not configured yet <nobody@nowhere>"
    url: "https://jenkins.{{ domain_name }}/"
jobs:
  - file: /var/lib/jenkins/job_dsl.groovy
